  <script>
    // ===== Boot Sequence =====
    const boot = document.getElementById('boot');
    const login = document.getElementById('login');
    const terminal = document.getElementById('terminal');
    const termInput = document.getElementById('termInput');
    const adminLogin = document.getElementById('adminLogin');
    const adminPwdBox = document.getElementById('adminPwdBox');
    const desktopUI = document.getElementById('desktopUI');

    setTimeout(() => {
      document.getElementById('bootFill').style.width = '100%';
      setTimeout(() => {
        boot.classList.remove('show');
        boot.classList.add('hidden');
        login.classList.remove('hidden');
        login.classList.add('show');
      }, 2000);
    }, 200);

    document.documentElement.requestFullscreen?.().catch(() => {});

    // ===== Guest Login Action =====
    document.getElementById('guestCard').onclick = () => {
      login.classList.remove('show');
      login.classList.add('hidden');
      desktopUI.style.display = 'flex';
    };

    // ===== Admin Password Enter Key =====
    document.getElementById('adminPwd').addEventListener('keydown', e => {
      if (e.key === 'Enter') {
        const pwd = e.target.value;
        if (pwd === 'password123') {
          adminLogin.classList.remove('show');
          adminLogin.classList.add('hidden');
          desktopUI.style.display = 'flex';
        } else {
          alert('Wrong password');
        }
      }
    });

    // ===== Terminal Hotkey (Ctrl + Shift + Z) =====
    let terminalOpen = false;
    window.addEventListener('keydown', e => {
      if (e.ctrlKey && e.shiftKey && e.key.toUpperCase() === 'Z') {
        e.preventDefault();
        terminal.classList.add('show');
        terminalOpen = true;
        termInput.value = '';
        termInput.focus();
      }
    });

    // ===== Terminal Commands =====
    termInput.addEventListener('keydown', e => {
      if (e.key === 'Enter') {
        const input = termInput.value.trim().toLowerCase();
        if (input === 'sudo admin login') {
          terminal.classList.remove('show');
          terminalOpen = false;
          login.classList.remove('show');
          login.classList.add('hidden');
          adminLogin.classList.remove('hidden');
          adminLogin.classList.add('show');
          adminPwdBox.style.display = 'block';
          document.getElementById('adminPwd').focus();
        } else if (input === 'exit') {
          terminal.classList.remove('show');
          terminalOpen = false;
        } else {
          alert('Unknown command');
        }
        termInput.value = '';
      }
    });
  </script>
